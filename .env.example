# Database Configuration
POSTGRES_URL=postgresql://gdrive_user:gdrive_pass123@localhost:5432/gdrive_sync
REDIS_URL=redis://:gdrive_pass123@localhost:6379/0

# Message Queue Configuration
RABBITMQ_URL=amqp://gdrive_user:gdrive_pass123@localhost:5672/gdrive_sync

# AWS S3 Configuration
AWS_S3_BUCKET=YOUR_S3_BUCKET_NAME
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Google Drive Configuration
GDRIVE_FOLDER_ID=YOUR_GDRIVE_FOLDER_ID
